<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance Software</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Manual CSS -->
    <link rel="stylesheet" href="/stylesheets/fmea.css">
</head>


<body>
    <section class="wrapper">
        <h2>TTF & TTR</h2>
        <div>
            <table class="table table-hover">
                <thead class="table-light align-middle">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Start</th>
                        <th scope="col">Finish</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length){
                        for(var i = 0; i< data.length; i++) {%>
                    <tr>
                        <td><%= (i+1) %></td>
                        <td><%= data[i].start%></td>
                        <td><%= data[i].finish%></td>
                    </tr>
                    <% }
                            
                    }else{ %>
                    <tr>
                        <td colspan="3">No data</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

            <!-- Input TTF TTR -->
            <% if (messages.success) { %>
            <p class="alert alert-success m2-4 mb-2"><%- messages.success %></p>
            <% } %>
            <form action="/ttfTtr" method="POST">
                <div class="mb-3">
                    <label for="komponenDataList" class="form-label">ID Komponen</label>
                    <input class="form-control" list="datalistOptions" id="komponenDataList"
                        placeholder="Pilih komponen" name="komponen">
                    <% if(data.length){ var selector = '';
                        for(var i = 0; i< data.length; i++) { %>
                    <datalist id="datalistOptions">
                        <option value="<%=data[i].id %>">
                            <% }
                        }%>
                    </datalist>
                </div>
                <div class="mb-3">
                    <label for="start" class="form-label">Start</label>
                    <input type="datetime-local" class="form-control" id="start" name="start">
                </div>
                <div class="mb-3">
                    <label for="finish" class="form-label">Finish</label>
                    <input type="datetime-local" class="form-control" id="finish" name="finish">
                </div>

                <div class="button-wrapper d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-submit">Submit</button>
                </div>

            </form>
        </div>
    </section>

</body>
<!-- JQuery JS -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<!-- Bootstrap JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Manual JS -->
<script src="/javascripts/dashboard.js"></script>
<!-- FontAwesome JS -->
<script src="https://kit.fontawesome.com/7441451cf7.js" crossorigin="anonymous"></script>

</html>